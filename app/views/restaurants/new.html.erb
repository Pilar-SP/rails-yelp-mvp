<h1>Create a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :address, required: true %>
  <%= f.input :category, collection: Restaurant::CATEGORIES, required: true %>
  <%= f.input :phone_number %>
  <%= f.button :submit %>
<% end %>
